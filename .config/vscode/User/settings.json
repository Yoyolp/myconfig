  // Custom Css and Js Loader
  "vscode_custom_css.imports": [
    "file:///c:/Users/13912/.vscode/extensions/brandonkirbyson.vscode-animations-2.0.7/dist/updateHandler.js"
  ],
  "leetcode-problem-rating.workspaceFolder": "C:\\Users\\13912\\.lcpr",
