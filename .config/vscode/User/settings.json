  "leetcode.hint.commentDescription": false,
  "workbench.iconTheme": "catppuccin-mocha",

  // -----------------Vim 插件核心配置 -----------
  "vim.useCtrlKeys":  true, // Ctrl-v Ctrl-c
  "vim.insertModeKeyBindings": [],
  "vim.handleKeys": {
     // 列出所有你可能在插入模式需要使用的 VS Code Ctrl 快捷键
    // 设置为 false 表示 Vim 不处理这些键，由 VS Code 处理
    "<C-s>": false, // 保存
    "<C-c>": false, // 复制
    "<C-v>": false, // 粘贴
    "<C-x>": false, // 剪切
    "<C-z>": false, // 撤销
    "<C-y>": false, // 重做 (Redo)
    "<C-a>": false, // 全选
    "<C-f>": false, // 查找
    "<C-h>": false, // 替换
    "<C-k>": false, // 很多扩展用它做前缀（如 Ctrl+K Ctrl+S 绑定快捷键）
    "<C-g>": false, // Go to 相关功能
    "<C-p>": false, // 命令面板 / 快速打开
    "<C-b>": false, // 切换侧边栏
    "<C-/>": false, // 注释行
    "<C-`>": false,  // 切换终端"<C-s>": false,
  },
  "vim.leader": "<space>",  // leader 键设置
  "vim.useSystemClipboard": true, // 允许使用 系统剪贴板
  "vim.visualModeKeyBindings": [
    // 在 visual 模式下 Leader + c 注释选中的行
    {
      "before": ["<Leader>", "/"],
      "commands": ["editor.action.commentLine"]
    }
  ],

  "vim.normalModeKeyBindings": [
    {
      "before": [ "<Leader", "w" ],
      "commands": ["workbench.action.closeActiveEditor"]
    }
  ],
  // ====================== markdown ===========================================
  "markdown.preview.fontFamily": "Maple Mono NF CN",
  "markdown.preview.fontSize": 14,
  "workbench.editorAssociations": {
    "*.md": "default",
    "*.markdown": "default",
    "*.svg": "imagePreview.previewEditor"
  },
  "vscode-office.openOutline": false,
  "markdown.preview.openMarkdownLinks": "inEditor",
  "vscode-office.editorTheme": "Auto",
  "workbench.editor.enablePreview": false,
  "javascript.format.enable": false,
  "custom-ui-style.preferRestart": true,
  "animations.CursorAnimation": true,
}