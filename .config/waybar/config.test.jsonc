{
  "layer": "top",          // waybar at top layer
  "postition": "top",      // Waybar position (top | bottom | left | right)
  "height": 30,            // Height 30 px sets the bar height in pixels 
  "margin": "0 0 0 0",     // waybar margin this is NO margin
  // 模块选项，定义左中右侧的模块  
  "modules-left" : [
    "custom/launcher",
    "sway/workspaces",
    "custom/swap",
    "tray",
    "sway/window",
    "sway/mode",
    "custom/cava-internal",
    "mpd#2",
    "mpd#3",
    "mpd#4",
    "mpd"
  ],

  "modules-center": [
    "clock"
  ],

  "modules-right": [
    "backlight",
    "pulseaudio",
    "custom/keyboard-layout",
    "temperature",
    "group/hardware",
    "battery",
    "network",
    "idle_inhibitor",
    "custom/power"
  ],

  // LOAD MODULES
  "include": [
    "~/.config/waybar/modules",
    ""
  ]
}



